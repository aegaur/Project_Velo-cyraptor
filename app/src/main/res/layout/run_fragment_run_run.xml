<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.run.Run_Run_Fragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:id="@+id/activity_run_lay_start_pause">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"/>

                <Button
                        android:id="@+id/activity_run_btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.4"
                        android:text="@string/activity_run_btn_start"
                        android:textColor="@android:color/white"
                        android:background="@color/apptheme_color"/>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:id="@+id/activity_run_lay_stop_resume"
                    android:visibility="gone">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"/>

                <Button
                        android:id="@+id/activity_run_btn_stop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.8"
                        android:text="@string/activity_run_btn_stop"
                        android:textColor="@android:color/white"
                        android:background="@color/apptheme_color"
                        android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material"/>

                <Button
                        android:id="@+id/activity_run_btn_resume"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.8"
                        android:text="@string/activity_run_btn_resume"
                        android:textColor="@android:color/white"
                        android:background="@color/apptheme_color"
                        android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"/>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="horizontal">

                <ca.qc.bdeb.p55.tp2.project_velo_cyraptor.view.util.CustomChronometer
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/activity_run_chrono"
                        android:layout_weight="1"
                        android:gravity="fill_vertical|center_horizontal"
                        android:textSize="30sp"
                        android:text="@string/activity_run_chrono_default"
                        android:textColor="@android:color/black"/>

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.10"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_distance"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/activity_run_lbl_distance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_distance_defaut"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_vitesse"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/activity_run_lbl_vitesse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_vitesse_defaut"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_calories"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/activity_run_lbl_calories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_calories_defaut"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/activity_run_lay_steps">

                    <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_steps"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/activity_run_lbl_pas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_run_lbl_steps_defaut"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"/>

                <Button
                        android:id="@+id/activity_run_btn_path"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.4"
                        android:text="@string/activity_run_btn_path"
                        android:textColor="@android:color/white"
                        android:background="@color/apptheme_color"/>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"/>
            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            <ProgressBar
                    android:id="@+id/activity_run_pgs_progres_trajet"
                    android:layout_width="match_parent"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:max="100"
                    android:progress="25"
                    android:secondaryProgress="50"
                    android:visibility="visible"/>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/activity_run_map"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1.2"
                  tools:context=".view.run.Run_Run_Fragment"/>
    </LinearLayout>
</FrameLayout>
