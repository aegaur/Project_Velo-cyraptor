<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.run.Run_Run_Fragment">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Space android:layout_width="match_parent" android:layout_height="wrap_content"
                               android:layout_weight="20"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/content_course_details.lbl_date"
                                android:layout_weight="1"
                                android:gravity="fill_vertical|center_horizontal"
                                android:textSize="30sp"
                                android:text="@string/content_course_lbl_date_defaut"
                                android:textColor="@android:color/black"/>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.10"
                                android:orientation="vertical">

                                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                              android:layout_weight="1" android:orientation="horizontal">
                                        <TextView android:id="@+id/textView5" android:layout_width="match_parent"
                                                  android:layout_height="match_parent" android:layout_weight="1"
                                                  android:gravity="center_horizontal"
                                                  android:text="@string/content_course_lbl_duree_invite"
                                                  android:textAppearance="?android:attr/textAppearanceMedium"
                                                  android:textSize="26sp"/>
                                        <TextView android:id="@+id/content_course_details_lbl_duree"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="match_parent" android:layout_weight="1"
                                                  android:gravity="center_horizontal"
                                                  android:text="@string/content_course_lbl_duree_defaut"
                                                  android:textAppearance="?android:attr/textAppearanceMedium"
                                                  android:textSize="26sp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/textView"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_distance_invite"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                        <TextView
                                                android:id="@+id/content_course_details_lbl_distance"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_distance_defaut"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.95"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/textView2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_speed_invite"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                        <TextView
                                                android:id="@+id/content_course_details_lbl_vitesse"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_speed_defaut"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/textView3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_calories_invite"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                        <TextView
                                                android:id="@+id/content_course_details_lbl_calories"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_calories_defaut"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/activity_run_lay_steps"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/textView4"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_steps_invite"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>

                                        <TextView
                                                android:id="@+id/content_course_details_lbl_pas"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="center_horizontal"
                                                android:text="@string/content_course_lbl_steps_defaut"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="26sp"/>
                                </LinearLayout>
                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"/>
                </LinearLayout>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:id="@+id/content_course_details_map"
                          android:name="com.google.android.gms.maps.SupportMapFragment"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1.2"
                          tools:context=".view.history.CourseDetails"/>
        </LinearLayout>
</FrameLayout>

